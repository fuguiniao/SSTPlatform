<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.fintech.sst.ui.activity.aisle.AisleManagerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="40sp"
        android:theme="@style/ToolbarPopupTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"
        app:titleTextColor="@color/white" />

    <com.fintech.sst.ui.widget.MenuCardView
        android:id="@+id/cardViewAli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/hideAli"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:gravity="center"
                android:background="#52b1e1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/hide"/>

            <TextView
                android:id="@+id/exitAli"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="#3586e5"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="@string/exit"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


                <EditText
                    android:id="@+id/et_aisle_ali"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView22"
                    app:layout_constraintEnd_toStartOf="@+id/switch_aisle_ali"
                    app:layout_constraintStart_toEndOf="@+id/textView22" />

                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@mipmap/icon_success_rate"
                    android:drawablePadding="10dp"
                    android:text="@string/success_rate"
                    android:textColor="#515151"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/textView33"
                    app:layout_constraintTop_toBottomOf="@+id/textView100" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@mipmap/icon_aisle_manger"
                    android:drawablePadding="10dp"
                    android:text="@string/aisle"
                    android:textColor="#515151"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@mipmap/icon_amount"
                    android:drawablePadding="10dp"
                    android:text="@string/money_pay"
                    android:textColor="#515151"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/textView22"
                    app:layout_constraintTop_toBottomOf="@+id/textView22" />

                <EditText
                    android:id="@+id/et_successRate_ali"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="textPersonName"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView66"
                    app:layout_constraintEnd_toEndOf="@+id/et_aisle_ali"
                    app:layout_constraintStart_toEndOf="@+id/textView66" />

                <TextView
                    android:id="@+id/tv_refresh_ali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/refresh"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="@+id/switch_aisle_ali"
                    app:layout_constraintTop_toTopOf="@+id/textView66" />

                <Switch
                    android:id="@+id/switch_aisle_ali"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/toggle_aisle_manager"
                    android:thumb="@null"
                    android:track="@null"
                    android:checked="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView22" />

                <EditText
                    android:id="@+id/et_money_ali"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="textPersonName"

                    android:text="0.0/0.0"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView33"
                    app:layout_constraintEnd_toEndOf="@+id/et_aisle_ali"
                    app:layout_constraintStart_toEndOf="@+id/textView33" />

                <TextView
                    android:id="@+id/textView100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableStart="@mipmap/icon_amount"
                    android:drawablePadding="10dp"
                    android:text="@string/money_notice"
                    android:textColor="#515151"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/textView33"
                    app:layout_constraintTop_toBottomOf="@+id/textView33" />

                <EditText
                    android:id="@+id/et_money_notice_ali"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="number"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:text="0.0"
                    app:layout_constraintBaseline_toBaselineOf="@+id/textView100"
                    app:layout_constraintEnd_toEndOf="@+id/et_money_ali"
                    app:layout_constraintStart_toEndOf="@+id/textView100" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/tvLoginAli"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ali_bg"
                android:gravity="center_vertical"
                android:text="@string/ali_login"
                android:drawableStart="@mipmap/logo_ali"
                android:drawablePadding="32dp"
                android:paddingStart="50dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

        </FrameLayout>
    </com.fintech.sst.ui.widget.MenuCardView>

    <com.fintech.sst.ui.widget.MenuCardView
